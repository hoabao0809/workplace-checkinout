<%- include('./includes/head.ejs') %>
<link rel="stylesheet" href="/assets/css/<%= css %>.css">
</head>

<body>
<%- include('./includes/navigation.ejs') %>
<div class="card">
    <div class="img">
      <img src="assets/images/avatar.png" alt="avatar" id="avatarImg">
      <form action="/user-detail" method="POST">
        <div class="imageUpload">
             <input type="file" name="image" id="imageUpload" >
             <input type="hidden" name="id" value="<%= user._id %>">
        </div>
        <div class="saveImg">
            <button class="btn btn-primary" type="submit">Save</button>
            <button class="btn btn-warning">Cancel</button>
        </div>
    </form>
    </div>
    <div class="infos">
      <div class="name">
        <h2><%= user.name %></h2>
      </div>
      <div class="details">
              <p>Ngày sinh: <%= user.doB.toLocaleDateString() %></p>
              <p>Hệ số lương: <%= user.salaryScale %></p>
              <p>Ngày vào làm việc: <%= user.startDate.toLocaleDateString() %></p>
              <p>Bộ phận: <%= user.department %></p>
              <p>Số ngày nghỉ phép: <%= user.annualLeave %></p>
      </div>

    </div>
  </div>

<%- include('./includes/footer.ejs') %>
