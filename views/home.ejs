<%- include('./includes/head.ejs') %>
<link rel="stylesheet" href="/assets/css/home.css">
</head>

<body>
<%- include('./includes/navigation.ejs') %>

<div class="home">
    <div class="flip-card">
        <div class="flip-card-inner">          
          <div class="flip-card-front">
            <div class="card-front__img">
              <img src="/assets/images/avatar.png" alt="Avatar">
            </div>

            <div class="card-front__content">
              <span>Trạng thái</span>
              <span>Không làm việc</span>
              <span>Nơi làm việc</span>
              <span><%= user.workplace %></span>
            </div>


          </div>


          <div class="flip-card-back">
            <div class="card-back__content">
              <h4>Họ tên: <%= user.name %></h4>
              <p>Ngày sinh: <%= user.doB %></p>
              <p>Hệ số lương: <%= user.salaryScale %></p>
              <p>Ngày vào làm việc: <%= user.startDate %></p>
              <p>Bộ phận: <%= user.department %></p>
              <p>Số ngày nghỉ phép: <%= user.annualLeave %></p>
            </div>
          </div>
        </div>
    </div>
    
</div>
</div>

<%- include('./includes/footer.ejs') %>

